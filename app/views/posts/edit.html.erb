<h3>スケジュール編集</h3>
 <%= render "shared/error", post: @post %>
  <%= form_with model: @post do |f| %>
    <table>
      <tr>
        <th><%= f.label :title,"タイトル" %></th>
        <td><%= f.text_field :title %></td>
      </tr>

      <tr>
        <th><%= f.label :start_date,"開始日時" %></th>
        <td><%= f.date_field :start_date %></td>
      </tr>

      <tr>
        <th><%= f.label :end_date,"終了日時" %></th>
        <td><%= f.date_field :end_date %></td>
      </tr>
      
      <tr>
        <th><%= f.label :allday, "終日" %></th>
        <td><%= f.check_box :allday, :as => :boolean %>終日の場合はチェックを入れます</td>
      </tr>

      <tr>
        <th><%= f.label :contents,"スケジュール詳細" %></th>
        <td><%= f.text_area :contents %></td>
      </tr>
    </table>

    <div>
      <ul>
        <li><%= f.submit "登録完了する"%></li>
        <li><%= link_to "スケジュール一覧に戻る", posts_path %></li>
      </ul>
    </div>
  <% end %>