<h3>スケジュール詳細</h3>
 
    <table>
      <tr>
        <th>タイトル</th>
        <td><%= @post.title %></td>
      </tr>
      <tr>
        <th>開始日時</th>
        <td><%= @post.start_date.to_s(:datetime_jp) %></td>
      </tr>
      <tr>
        <th>終了日時</th>
        <td><%= @post.end_date.to_s(:datetime_jp) %></td>
      </tr>
      <tr>
        <th>投稿日時</th>
        <td><%= @post.created_at.to_s(:datetime_jp) %></td>
      </tr>
      <tr>
        <th>更新日時</th>
        <td><%= @post.updated_at.to_s(:datetime_jp) %></td>
      </tr>
      <tr>
        <th>終日</th>
        <td>
            <% if @post.allday %>
                <%= "○" %>
            <% else %>
                <%= "" %>
            <% end %>
        </td>
      </tr>
      <tr>
        <th>スケジュールメモ</th>
        <td><%= @post.contents %></td>
      </tr>
    </table>
 
    <div>
      <ul>
        <li><%= link_to "スケジュール一覧に戻る", posts_path %></li>
      </ul>
      <ul>
        <li><%= link_to "スケジュールを編集する", edit_post_path(@post.id) %></li>
      </ul>
      <ul>
        <li><%= link_to "スケジュールを削除する", post_path(@post.id), method: :delete, data: { confirm: "本当に削除しますか？" } %></li>
      </ul>
    </div>